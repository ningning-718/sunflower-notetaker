<!DOCTYPE html>
<html>
  <head>
    <title>SunFlower Note Taker</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="/javascripts/jquery-3.6.0.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />

    <script>
      $(function() {
        $('#search_btn').click((evt) => {
          const search_val = $('#search_input').val().split(' ');
          if (!search_val) {
            return;
          }
          window.location = "/search?kws=" + search_val.toString();  
        });

        $('#search_input').keypress((evt) => {
          if (evt.key == 'Enter') {
            evt.preventDefault();
            $('#search_btn').click();
          }
        });
      });      
    </script>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="/">SunFlower Note Taker</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navb">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navb">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="nav-link" href="/newnote">Add(+)</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/login">{{#if authed}}Logout{{else}}Login{{/if}}</a>
          </li>
        </ul>
      <form class="form-inline my-2 my-lg-0">
        <input id="search_input" class="form-control mr-sm-2" type="text" placeholder="Search">
        <button id="search_btn" class="btn btn-success my-2 my-sm-0" type="button">Search</button>
      </form>
    </div>
</nav>
    {{{body}}}
  </body>
</html>
